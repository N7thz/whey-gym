{
	"$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
	"organizeImports": {
		"enabled": true,
		"include": ["**/*.{js,jsx,ts,tsx}"]
	},
	"formatter": {
		"indentStyle": "tab",
		"lineWidth": 80
	},
	"javascript": {
		"formatter": {
			"arrowParentheses": "asNeeded",
			"jsxQuoteStyle": "double",
			"quoteStyle": "double",
			"semicolons": "asNeeded",
			"trailingCommas": "es5"
		}
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"complexity": {
				"useOptionalChain": "off"
			},
			"a11y": {
				"noSvgWithoutTitle": "off"
			},
			"suspicious": {
				"noArrayIndexKey": "off",
				"noExplicitAny": "info"
			},
			"correctness": {
				"useExhaustiveDependencies": "off"
			}
		}
	},
	"files": {
		"ignore": ["node_modules"]
	}
}
